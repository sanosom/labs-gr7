<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="false"
        android:key="debug"
        android:title="Debug" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="ring"
        android:title="Sonar" />"

    <RingtonePreference
        android:defaultValue="content://settings/system/notification_sound"
        android:dependency="ring"
        android:key="ringtone"
        android:ringtoneType="notification"
        android:title="Ringtone" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="vibrate"
        android:title="Vibrar" />

    <ListPreference
        android:defaultValue="3"
        android:entries="@array/pref_short_break_list_titles"
        android:entryValues="@array/pref_short_break_list_values"
        android:key="short_break"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Periodo de los short break" />

    <ListPreference
        android:defaultValue="10"
        android:entries="@array/pref_long_break_list_titles"
        android:entryValues="@array/pref_long_break_list_values"
        android:key="long_break"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Periodo de los long break" />

</PreferenceScreen>
